<!doctype html>
<html>
<head>
  <meta http-equiv="content-type" content="text/html; charset=UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <title>Config Converter | <%= @title %></title>
  <script type="text/javascript" src="/js/jquery1_9.js"></script>
  <script type="text/javascript" src="/js/bootstrap.js"></script>
</head>
<body>
  <header>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Config Converter</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="/home">Home</a></li>
            <li><a href="/upload">Upload</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
  </header>

  <div class="container" d="main">
  	<br><br><br>
  	<% if (defined? @message) %>
	  <div class="alert alert-<%= @message[1] %> alert-dismissable">
	    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		<%= @message[0] %>
	  </div>
    <% end %>
    <%= yield %>
    <br><br>
  </div>
	<div id="footer">
		<div class="container">
			<p class="text-muted">Alpha version.</p>
		</div>
	</div>
</body>
</html>